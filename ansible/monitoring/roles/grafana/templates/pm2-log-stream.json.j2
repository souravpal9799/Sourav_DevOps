{
  "uid": "pm2-loki-dashboard",
  "title": "PM2 Logs (Loki)",
  "description": "PM2 application logs grouped by service",
  "schemaVersion": 26,
  "version": 1,
  "editable": true,
  "style": "dark",
  "timezone": "",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "label": "Loki",
        "query": "loki",
        "refresh": 1
      },
      {
        "name": "service",
        "type": "query",
        "label": "PM2 Service",
        "datasource": "${DS_LOKI}",
        "query": "label_values({job=\"pm2\"}, service)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "query": "",
        "current": {
          "text": "",
          "value": ""
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "Log Volume",
      "datasource": "${DS_LOKI}",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 4
      },
      "bars": true,
      "lines": false,
      "fill": 1,
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"pm2\", service=~\"$service\"} |= \"$search\" [$__interval]))",
          "refId": "A"
        }
      ],
      "legend": {
        "show": false
      },
      "xaxis": {
        "mode": "time",
        "show": true
      },
      "yaxes": [
        {
          "show": false
        },
        {
          "show": false
        }
      ]
    },
    {
      "id": 2,
      "type": "logs",
      "title": "PM2 Logs",
      "datasource": "${DS_LOKI}",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 22
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Ascending"
      },
      "targets": [
        {
          "expr": "{job=\"pm2\", service=~\"$service\"} |= \"$search\"",
          "refId": "A"
        }
      ]
    }
  ],
  "links": [
    {
      "type": "link",
      "title": "Open in Explore",
      "url": "/explore?orgId=1&left=[\"now-1h\",\"now\",\"Loki\",{\"expr\":\"{job=\\\\\\\"pm2\\\\\\\", service=\\\\\\\"$service\\\\\\\"}\"}]",
      "targetBlank": true
    }
  ],
  "tags": ["loki", "pm2", "logs"]
}
