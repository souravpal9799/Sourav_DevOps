{
  "uid": "var-www-filename-logs",
  "title": "NodeJS Logs (/var/www by file)",
  "schemaVersion": 26,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },

  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
        "type": "datasource",
        "label": "Loki",
        "query": "loki",
        "refresh": 1
      },
      {
        "name": "filename",
        "type": "query",
        "label": "Log file",
        "datasource": "${DS_LOKI}",
        "query": "label_values({job=\"nodejs\"}, filename)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "query": ""
      }
    ]
  },

  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "Log Volume",
      "datasource": "${DS_LOKI}",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 4
      },
      "bars": true,
      "lines": false,
      "fill": 1,
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"nodejs\", filename=~\"$filename\"} |= \"$search\" [$__interval]))",
          "refId": "A"
        }
      ],
      "legend": {
        "show": false
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "Application Logs",
      "datasource": "${DS_LOKI}",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 22
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Ascending"
      },
      "targets": [
        {
          "expr": "{job=\"nodejs\", filename=~\"$filename\"} |= \"$search\"",
          "refId": "A"
        }
      ]
    }
  ],

  "tags": ["loki", "nodejs", "var-www", "logs"]
}
